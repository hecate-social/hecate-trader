{application, hecate_traderd, [
    {description, "Hecate Trader - AI Stock Trading Agents Daemon"},
    {vsn, "0.2.0"},
    {registered, [hecate_traderd_sup]},
    {mod, {hecate_traderd_app, []}},
    {applications, [
        kernel,
        stdlib,
        crypto,
        ssl,
        inets,
        cowboy,
        hackney
    ]},
    {env, [
        {data_dir, "~/.hecate/hecate-traderd"},
        {api_socket_name, "api.sock"}
    ]},
    {modules, []},
    {licenses, ["Apache-2.0"]},
    {links, [
        {"GitHub", "https://github.com/hecate-social/hecate-trader"}
    ]}
]}.
