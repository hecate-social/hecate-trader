{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
    {cowboy, "2.12.0"},
    {hackney, "1.20.1"}
]}.

{relx, [
    {release, {hecate_traderd, "0.1.0"}, [
        hecate_traderd,
        sasl
    ]},

    {mode, dev},
    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true},
    {sys_config, "config/sys.config"},
    {vm_args, "config/vm.args"}
]}.

{profiles, [
    {prod, [
        {relx, [
            {mode, prod},
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]},
    {test, [
        {deps, [
            {meck, "0.9.2"}
        ]}
    ]}
]}.

{project_plugins, [
    rebar3_ex_doc
]}.

{ex_doc, [
    {source_url, <<"https://github.com/hecate-social/hecate-trader">>},
    {extras, [<<"README.md">>]},
    {main, <<"README.md">>}
]}.

{hex, [{doc, ex_doc}]}.
